
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

      <!-- Sidebar Menu -->
      <ul class="sidebar-menu">
        {{#each links as |link|}}
          {{#if link.submenu }}
          <li class="treeview">
            <a href="#"><i class="fa {{if link.icon link.icon 'fa-link'}}"></i> <span>{{link.name}}</span>
              <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
            </a>
            <ul class="treeview-menu">
              {{#each link.submenu as |sublink|}}
              <li><a href="#">{{sublink.name}}</a></li>
              {{/each}}
            </ul>
          </li>
          {{else}}
            <li class={{if (eq active link) 'active' }}>
              <a href="#"><i class="fa {{if link.icon link.icon 'fa-link'}}"></i> <span>{{link.name}}</span></a>
            </li>
          {{/if}}
        {{/each}}
        <li class="active"><a href="#"><i class="fa fa-link"></i> <span>Link</span></a></li>
        <li><a href="#"><i class="fa fa-link"></i> <span>Another Link</span></a></li>
        <li class="treeview">
          <a href="#"><i class="fa fa-link"></i> <span>Multilevel</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="#">Link in level 2</a></li>
            <li><a href="#">Link in level 2</a></li>
          </ul>
        </li>
      </ul>
      <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
  </aside>
